<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/planit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:justificationMode="inter_word"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/creteround"
            android:background="@color/colorAccent"
            android:text="@string/planit_des"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:src="@drawable/motto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Motto"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/robotobold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:onClick="facebookPressed"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/planit_dis"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="italic"/>

</RelativeLayout>